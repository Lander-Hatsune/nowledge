<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntityDetailActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/mediumslateblue"
                android:text="属性"
                android:textSize="25sp" />

            <com.example.nowledge.screen.MyListView
                android:id="@+id/FlistAtDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1" />
        </LinearLayout>



        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="关联"
            android:background="@color/mediumslateblue"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginBottom="10sp"
            android:layout_marginEnd="12sp"
            android:orientation="vertical">



            <TextView
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="父关系"
                android:background="@color/cornflowerblue"
                android:textSize="20sp"/>

                <com.example.nowledge.screen.MyListView
                    android:id="@+id/FlistSuperContentAtDetail"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:background="@color/bisque"
                    tools:ignore="MissingClass">
                </com.example.nowledge.screen.MyListView>



            <TextView
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:text="子关系"
                android:background="@color/cornflowerblue"
                android:textSize="20sp"/>

                <com.example.nowledge.screen.MyListView
                    android:id="@+id/FlistChildContentAtDetail"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1" />


        </LinearLayout>


        <com.example.nowledge.screen.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_100"/>




    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>